.top
  height 100vh
  > .menu
    position fixed
    top -50px
    right 0px
    bottom 0px
    width 100%
    height 500vh
    z-index 100
    background-color gc(grey90)
    onoff()
    > .inner
      margin 10vh 0 0 0
      > .item
        display block
        padding 20px 0
      > .dot
        display none

  > .socials
    display none

  > .burger
    position fixed
    top 20px
    right 20px
    clear both
    width 50px
    height 45px
    z-index 150
    &.off > .lines > span
      background-color gc(white1)
    &.off > .lines > span:nth-child(1)
      top 18px
      width 0%
      left 50%
    &.off > .lines > span:nth-child(2)
      transform rotate(45deg)
    &.off > .lines > span:nth-child(3)
      transform rotate(-45deg)
    &.off > .lines > span:nth-child(4)
      top 18px
      width 0%
      left 50%

    > .lines
      position relative
      width 100%
      height 100%
      > span
        display block
        position absolute
        height 9px
        border-radius 9px
        width 100%
        height 9px
        background-color gc(white1)
        opacity 1
        left 0
        transition 0.25s ease-in-out
        &:nth-child(1)
          top 0px
        &:nth-child(2),
        &:nth-child(3)
          top 18px
        &:nth-child(4)
          top 36px

  > .soon
    margin-top 30vh
  > .doors
    gf(h2)
    margin 20vh 0 30px 0
  > a.cta
    display block
    margin 15vh 20px 0 20px
    padding 23px 30px 20px 30px
.infobar
  > .anvil.d
    display none
  > .anvil.m
    display block
    margin 0 auto 20px auto
  > .label
    display block
    margin 20px 0
  > .copy
    text-align center

.info
  height auto
  > .right
    float none
    width auto
    height auto
    > .inner
      padding 20px
      > .copy
        > .dot
          display block
          height 0px
  > .left
    float none
    height auto
    width auto
    > .gallery
      height auto

.about
  > .left
    float none
    width auto
    height auto
    > .inner
      padding 50px 20px
  > .right
    float none
    width auto
    height auto

.newsletter
  height auto
  > .inner
    width auto  
    > .title
      background none
      opacity 1
      width auto
      height auto
      float none
      > .copy
        padding 50px 0 0 0
        text-align center
    > .form
      float none
      > .input
        float none
        margin 0 25px
        > input
          display block
          margin 20px 0 0 0
          width 88.8%
      > .cta
        float none
        margin 0 25px 50px 25px
        text-align center

.beers
  padding 0 0 30px 0
  > .title
    padding 20px 0 0 20px
    margin 0
    float none
    gf(h2)
  > .description
    padding 0 20px
  > .beerlist
    > .inner
      margin 0 30px
      padding 0
      .beer
        margin 20px 10px 20px 10px

.slick-arrow
  width 20px
  height 20px
  z-index 100
.slick-prev
  left -25px
.slick-next
  right -05px

.footer
  padding 20px
  > .inner
    > .left
      float none
      width 100%
      > .inner > .lochours > .section 
        float none
        width auto

    > .right
      float none
      width auto
      margin 20px 0
      > .inner
        > .socials
          text-align center
          > .social
            width 20px
            height 20px
            margin 40px 2% 0 2% 
