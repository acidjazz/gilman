extends extends/layout

block content

  .top
    .clear

    .logo

    .socials
      a.social.instagram(href=config.meta.social.instagram,target='_new')
        include ../vector/instagram.svg
      a.social.facebook(href=config.meta.social.facebook,target='_new')
        include ../vector/facebook.svg
      a.social.twitter(href=config.meta.social.twitter,target='_new')
        include ../vector/twitter.svg
    
    .menu
      .item draft list
      .item.dot
      .item events &amp; growlers
      .item.dot
      .item taproom
      .item.dot
      .item about

    .soon opening soon

    .doors doors open september 12

    a.cta(href='/') see our beers

  .infobar
    .label taproom
    a.copy(href=config.meta.address.map,target='_new') #{config.meta.address.street}, #{config.meta.address.city}, #{config.meta.address.state}, #{config.meta.address.zip}
    .anvil
    .label hours
    .copy Mon-Thu 11am-11pm
    .dot
    .copy Fri-Sun 11am-1am

  .info
    .right
      .inner
        .title the taproom
        .copy Some words about how awesome your tasting room is and what a rad time they'll have when they visit.
        .lochours
          .section
            .title location
            .copy Gilman Brewing Company
            .copy #{config.meta.address.street}
            .copy #{config.meta.address.city}, #{config.meta.address.state}
          .section
            .title hours
            .copy Mon-Thur:
              .right 11am-11pm
            .copy Fri-Sun:
              .right 11am-1am
          .clear

          .copy Call: 
            a(href="tel:"+config.meta.address.phone)=config.meta.address.phone
            .dot
            | Email: 
            a(href="tel:"+config.meta.email)=config.meta.email

    .left
      .map
        .anvil
      .gallery
