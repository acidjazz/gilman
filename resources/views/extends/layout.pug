doctype
html(lang='en')
  head
    title #{config.meta.title}

    script(type='text/javascript', src='/js/vendor.js')
    script(type='text/javascript', src='/js/bundle.js')

    meta(http-equiv="X-UA-Compatible",content="IE=Edge,chrome=1")
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height')
    link(rel='stylesheet',href="/css/vendor.css",type='text/css',media='all')
    link(rel='stylesheet',href="/css/main.css",type='text/css',media='all')
    link(href="https://fonts.googleapis.com/css?family=Cutive|Karla:400,700",rel="stylesheet")

    script(type='text/javascript').

      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '#{config.meta.trackingID}', 'auto');
      ga('require', 'linkid');
      ga('send', 'pageview');


    //- google
    meta(name='description',content=config.meta.description)
    meta(name='keywords',content=config.meta.keywords)

    script(type='application/ld+json').
      {
        "@context": "http://schema.org",
        "@type": "Organization",
        "url": "#{config.meta.url}",
        "logo": "#{config.meta.url}#{config.meta.share}",
        "telephone": "#{config.meta.address.phone}",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "#{config.meta.address.street}",
          "addressLocality": "#{config.meta.address.street}",
          "addressRegion": "#{config.meta.address.state}",
          "postalCode": "#{config.meta.address.zip}",
          "addressCountry": "#{config.meta.address.country}"
        },
        "sameAs": [
          "#{config.meta.social.instagram}",
          "#{config.meta.social.twitter}",
          "#{config.meta.social.facebook}"
        ]

      }

    meta(property='og:url',content=config.meta.url)
    meta(property='og:title',content=config.meta.title)
    meta(property='og:image',content=config.meta.url + config.meta.share)
    meta(property='og:description',content=config.meta.description)

    meta(property='og:type',content='website')

    //- twitter
    meta(name='twitter:card',content='summary_large_image')

    meta(name='twitter:title',content=config.meta.title)
    meta(name='twitter:description',content=config.meta.description)
    meta(name='twitter:image',content=config.meta.url + config.meta.share)
    meta(name='twitter:image:width','1200')
    meta(name='twitter:image:height','630')

    link(rel="apple-touch-icon",sizes="180x180",href="/ico/apple-touch-icon.png")
    link(rel="icon",type="image/png",href="/ico/favicon-32x32.png",sizes="32x32")
    link(rel="icon",type="image/png",href="/ico/favicon-16x16.png",sizes="16x16")
    link(rel="manifest",href="/ico/manifest.json")
    link(rel="mask-icon",href="/ico/safari-pinned-tab.svg",color="#5bbad5")
    link(rel="shortcut,icon",href="/ico/favicon.ico")
    meta(name="msapplication-config",content="/ico/browserconfig.xml")
    meta(name="theme-color",content="#ffffff")

  body
    include ../includes/header
    .container
      .inner
        block content
